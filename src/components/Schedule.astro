---
import { Image } from 'astro:assets';
import image1 from '../assets/image1.jpeg';
import image4 from '../assets/image4.jpeg';
import image14 from '../assets/image14.jpeg';

const images = [image1, image4, image14];
const {} = Astro.props;
---

<section id="rozklad-jazdy">
  <div class="background-slideshow">
    {images.map((img, index) => (
      <Image src={img} alt="" class={index === 0 ? 'active' : ''} />
    ))}
    <div class="overlay"></div>
  </div>
  <div class="content-wrapper">
    <h2>Rozkład jazdy</h2>
    <div class="schedule-container">
    <h3 class="start-date">
      Zajęcia grupowe trwają od września i końca czerwca każdego roku.
    </h3>
    <div class="event-grid">
      <div class="event">
        <p class="event-date"><strong>Start: 2 września, 19:00</strong></p>
        <p class="event-title">Zajęcia aerobowe</p>
        <p class="event-description">
          Kształtujące sylwetkę, średnia intensywność
        </p>
        <a href="mailto:example@gmail.com" class="signup-btn">ZAPISZ SIĘ</a>
      </div>
      <div class="event">
        <p class="event-date"><strong>4 września, 18:00</strong></p>
        <p class="event-title">Grupowe zajęcia rolkowe</p>
        <p class="event-description">
          Poziomy: początkujący i średniozaawansowani, wiek: 5+
        </p>
        <a href="mailto:example@gmail.com" class="signup-btn">ZAPISZ SIĘ</a>
      </div>
      <div class="event">
        <p class="event-date"><strong>4 września, 19:00</strong></p>
        <p class="event-title">Pilates</p>
        <p class="event-description">
          Niska intensywność, rozciągająco-wzmacniające, body & mind
        </p>
        <a href="mailto:example@gmail.com" class="signup-btn">ZAPISZ SIĘ</a>
      </div>
    </div>
    <div class="location">
      <h4>Miejsce spotkań:</h4>
      <p>Przysiek, Leśna 1</p>
    </div>
  </div>
  </div>
</section>

<style>
  section {
    min-height: 100vh;
    padding: 7rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .background-slideshow {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .background-slideshow img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1s ease-in-out;
    transform: translateX(-100%);
    z-index: 0;
  }

  .background-slideshow img.active {
    transform: translateX(0);
    z-index: 1;
  }

  .background-slideshow img.exit {
    transform: translateX(100%);
    z-index: 0;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(243, 244, 247, 0.55);
    z-index: 2;
  }

  .content-wrapper {
    position: relative;
    z-index: 3;
  }
  h2 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: #333;
  }
  .schedule-container {
    max-width: 900px;
    margin: 0 auto;
  }
  .start-date {
    font-size: 1.5rem;
    color: #e63946;
    margin-bottom: 2rem;
  }
  .event-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  .event {
    background: #fff;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }
  .event:hover {
    transform: translateY(-5px);
  }
  .event-date {
    font-size: 1.1rem;
    color: #333;
    margin-bottom: 0.5rem;
  }
  .event-title {
    font-size: 1.3rem;
    font-weight: bold;
    color: #1d3557;
    margin-bottom: 1rem;
  }
  .event-description {
    font-size: 1rem;
    color: #457b9d;
  }
  .location {
    margin-top: 2rem;
  }
  .location h4 {
    font-size: 1.5rem;
    color: #333;
    margin-bottom: 1rem;
  }
  .signup-btn {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background-color: #e63946;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }
  .signup-btn:hover {
    background-color: #d62828;
  }
</style>

<script>
  const slides = document.querySelectorAll('.background-slideshow img');
  let current = 0;

  if (slides.length > 0) {
    setInterval(() => {
      const prev = current;
      current = (current + 1) % slides.length;

      const prevSlide = slides[prev] as HTMLElement;
      const currentSlide = slides[current] as HTMLElement;

      prevSlide.classList.remove('active');
      prevSlide.classList.add('exit');

      currentSlide.classList.add('active');

      setTimeout(() => {
        prevSlide.classList.remove('exit');
        prevSlide.style.transition = 'none';
        void prevSlide.offsetWidth;
        prevSlide.style.transition = '';
      }, 1000);
    }, 5000);
  }
</script>
