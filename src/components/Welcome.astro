---
import BackgroundSlideshow from './BackgroundSlideshow.astro';
import { Image } from 'astro:assets';
import logo from '../assets/full-logo.png';
import logoMobile from '../assets/logo-only-roll.png';
import image1 from '../assets/image1.jpeg';
import image4 from '../assets/image4.jpeg';
import image14 from '../assets/image14.jpeg';

const images = [image1, image4, image14];
---

<section id="welcome">
  <BackgroundSlideshow images={images} />
  <div class="logo-container">
    <Image src={logo} alt="Wyrolowani Logo" class="logo-desktop" />
    <Image src={logoMobile} alt="Wyrolowani Logo" class="logo-mobile" />
  </div>
</section>

<style>
  section {
    position: relative;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    overflow: hidden;
  }

  .logo-container {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  .logo-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.90;
  }

  .logo-mobile {
    display: none;
  }

  @media (max-width: 768px) {
    .logo-desktop {
      display: none;
    }

    .logo-mobile {
      display: block;
    }
  }
</style>
