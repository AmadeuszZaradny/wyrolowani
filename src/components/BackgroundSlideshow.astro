---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  images: ImageMetadata[];
}

const { images } = Astro.props;
---

<div class="background-slideshow">
  {images.map((img, index) => (
    <Image src={img} alt="" class={index === 0 ? 'active' : ''} />
  ))}
  <div class="overlay"></div>
</div>

<style>
  .background-slideshow {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .background-slideshow :global(img) {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 1s ease-in-out;
    transform: translateX(-100%);
    z-index: 0;
  }

  .background-slideshow :global(img.active) {
    transform: translateX(0);
    z-index: 1;
  }

  .background-slideshow :global(img.exit) {
    transform: translateX(100%);
    z-index: 0;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(243, 244, 247, 0.15);
    z-index: 2;
  }
</style>

<script>
  function initSlideshows() {
    const slideshows = document.querySelectorAll('.background-slideshow');
    slideshows.forEach(slideshow => {
      // Check if already initialized to avoid duplicate intervals
      if (slideshow.hasAttribute('data-initialized')) return;
      slideshow.setAttribute('data-initialized', 'true');

      const slides = slideshow.querySelectorAll('img');
      let current = 0;

      if (slides.length > 0) {
        setInterval(() => {
          const prev = current;
          current = (current + 1) % slides.length;

          const prevSlide = slides[prev] as HTMLElement;
          const currentSlide = slides[current] as HTMLElement;

          prevSlide.classList.remove('active');
          prevSlide.classList.add('exit');

          currentSlide.classList.add('active');

          setTimeout(() => {
            prevSlide.classList.remove('exit');
            prevSlide.style.transition = 'none';
            void prevSlide.offsetWidth;
            prevSlide.style.transition = '';
          }, 1000);
        }, 5000);
      }
    });
  }

  initSlideshows();
  document.addEventListener('astro:after-swap', initSlideshows);
</script>
