  }
  
  .start-date {
    font-size: 1.5rem;
    color: #333;
    margin: 0;
  }
  .event-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  .event {
    background: #fff;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    opacity: 0.75;
  }
  .event:hover {
    transform: translateY(-5px);
  }
  .event-date {
    font-size: 1.1rem;
    color: #333;
    margin-bottom: 0.5rem;
  }
  .event-title {
    font-size: 1.3rem;
    font-weight: bold;
    color: #1d3557;
    margin-bottom: 1rem;
  }
  .event-description {
    font-size: 1rem;
    color: #457b9d;
  }
  
  .location-box {
    margin-top: 3rem;
    background: #fff;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    opacity: 0.95;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    opacity: 0.75;
  }
  
  .location-box:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }
  
  .location-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: center;
  }
  
  .location-text {
    text-align: left;
  }
  
  .location-text h4 {
    font-size: 1.8rem;
    color: #1d3557;
    margin-bottom: 1rem;
    font-weight: bold;
  }
  
  .address {
    font-size: 1.3rem;
    color: #457b9d;
    margin-bottom: 1.5rem;
    font-weight: 500;
  }
  
  .map-link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #457b9d;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    transition: background-color 0.3s ease, transform 0.2s ease;
    font-weight: 500;
  }
  
  .map-link:hover {
    background-color: #1d3557;
    transform: scale(1.05);
  }
  
  .location-map {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  @media (max-width: 768px) {
