---
import { Image } from 'astro:assets';
import logo from '../assets/wyrolowani-logo.jpg';
---

<section id="welcome">
  <div class="background">
    <Image src={logo} alt="Wyrolowani Logo" class="bg-image" />
  </div>
</section>

<style>
  section {
    position: relative;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    overflow: hidden;
  }

  .bg-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  .content {
    color: white;
    background-color: rgba(0, 0, 0, 0.5);
    padding: 2rem;
    border-radius: 10px;
  }
</style>
